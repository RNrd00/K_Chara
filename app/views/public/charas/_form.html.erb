<%= form_with model: chara, method: :post, url: public_charas_path do |f| %>
    <%= f.label '貴方の名前:' %>
    <%= f.text_field :name, class:'w-25' %>
    <%= f.label '削除パスワード(1~100の文字か数字)' %>
    <%= f.text_field :delete_key, :size => "/\A\w{1,100}\z/i", class:'w-25' %><br>
    <br>
    <%= f.label 'キャラの設定' %>
    <%= f.text_area :creation, class:'form-control w-100', rows:'5' %>
    <br>
    <%= f.submit 'キャラ投稿' %>
<% end %>