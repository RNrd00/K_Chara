<table>
    <tbody>
        <% @free_comments.each do |free_comment| %>
        <tr>
            <td>
                <%= link_to public_customer_path(free_comment.customer) do %>
                    <%= image_tag free_comment.customer.get_profile_image, size: "100x100" %><br>
                    <%= free_comment.customer.name %>
                <% end %>
            </td>
            <td><%= free_comment.comment %></td>
            <td>
                <% if free_comment.customer == current_customer %>
                    <%= link_to "削除する", public_free_comment_path(free_comment), method: :delete, class: "btn btn-danger pull-right", data: {confirm: "本当に削除しますか？"} %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>